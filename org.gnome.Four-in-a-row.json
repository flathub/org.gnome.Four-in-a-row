            ]
        },
        {
            "name": "four-in-a-row",
            "buildsystem": "meson",
            "sources": [{
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/four-in-a-row.git",
                "tag": "3.34.0",
                "commit": "2c087c1294539a99353688d2d5650a424262a3cc"
